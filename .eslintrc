{
  "root": true,
  "extends": "airbnb",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "rules": {
    "func-names": 0,
    "comma-dangle": 0,
    "consistent-return": 0,
    "no-return-assign": 0,
    "react/prefer-es6-class": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-boolean-value": 0,
    "arrow-body-style": 0,
    "max-len": 0,
    "radix": [2, "as-needed"],
    "no-param-reassign": 0,
    "react/jsx-no-bind": 0,
    "no-alert": 0,
    "new-cap": [2, { "capIsNew": false }]
  },
  "globals": {
    "$": true,
    "I18n": true,
    "_": true
  }
}
