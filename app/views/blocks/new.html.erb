<% content_for :after_title do " - Add New Block" end %>

<header class="main-page">
  <h1><%= t("application.dashboard") %></h1>
</header>

<section id="courses">
  <div class="section-header">
    <% if flash[:notice] %>
      <div class="alert"><p><%= flash[:notice] %></p></div>
    <% end %>
    <h3>Add New Block for <%= @course.title %></h3>
    <%= form_for :block, url: blocks_path do |f| %>
      <fieldset>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </fieldset>

      <fieldset>
        <%= f.submit %>
      </fieldset>
    <% end %>
  </div>
</section>