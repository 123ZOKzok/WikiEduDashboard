<li class="row course-list__row">
  <div class="course-list__row__title"><h5><%= course.title %></div>
  <div class="course-list__row__characters"><%= course.character_sum %></div>
  <div class="course-list__row__views"><%= course.view_sum %></div>
  <div class="course-list__row__students"><%= course.user_count %></div>
  <div class="course-list__row__link"><%= link_to 'View Course', course_path(course.slug) %></div>
</li>