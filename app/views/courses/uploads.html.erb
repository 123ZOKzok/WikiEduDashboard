<% content_for :before_title do "#{@course.title} - Files uploaded - " end %>

<%= render :partial => 'header', :locals => {:page => 5} %>

<div class="course_main">
  <section id="uploads" class="container">
    <div>
      <div class='section-header'>
        <h3><%= t("files.uploaded") %></h3>
    <!--     <div className='sort-select'>
          <select className='sorts' name='sorts' onChange={@sortSelect}>
            <option value='wiki_id'>Name</option>
            <option value='assignment_title'>Assigned Article</option>
            <option value='reviewer_name'>Reviewer</option>
            <option value='character_sum_ms'>MS Chars Added</option>
            <option value='character_sum_us'>US Chars Added</option>
          </select>
        </div> -->
      </div>
      <table class="uploads">
        <thead>
          <th class=''>Image</th>
          <th class='desktop-only-tc'>File Name</th>
          <th class='desktop-only-tc'>Uploaded By</th>
          <th class='desktop-only-tc'>Usage</th>
          <th class='desktop-only-tc'>Date/Time</th>
          <th class='desktop-only-tc'></th>
        </thead>
        <tbody>
          <% if @uploads.count > 0 %>
            <% @uploads.each do |file| %>
              <tr>
                <td class='wide-mobile'>
                  <%= link_to file.url, :target => "_blank" do %>
                    <%= image_tag file.thumburl %>
                  <% end %>
                  <p class='tablet-only'>
                    <span><%= file.user.wiki_id %></span>
                    <% unless file.usage_count.nil? %>
                      <span>&nbsp;|&nbsp;</span>
                      <span><%= t("uploads.usages") %>: <%= file.usage_count %></span>
                    <% end %>
                  </p>
                </td>
                <td class="desktop-only-tc"><%= link_to file.url, :target => "_blank", :class => "inline" do %><%= pretty_filename(file) %><% end %></td>
                <td class="desktop-only-tc"><%= file.user.wiki_id %></td>
                <td class="desktop-only-tc"><%= file.usage_count %></td>
                <td class='desktop-only-tc'><%= file.uploaded_at.strftime("%Y-%m-%d %k:%M") %> UTC</td>
                <td class='desktop-only-tc'><!-- <p class="icon icon-arrow"></p> --></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="text-center"><%= t("uploads.none", title: @course.title) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
</div>
