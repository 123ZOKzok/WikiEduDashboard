<%= render :partial => 'nav', :locals => {:page => 0, :course => @course} %>

<%= render :partial => 'header', :locals => {:page => 0} %>

<section id="users">
  <h3 class="section-header">Student Editors</h3>
  <div class="row user-list__row list__header">
    <div class="user-list__row__name sort" data-sort="name"><p>Name</p></div>
    <div class="user-list__row__training sort" data-sort="training" title="<%= User.training_def %>"><p>Completed training</p></div>
    <div class="user-list__row__characters sort" data-sort="characters" title="<%= User.character_def %>"><p>Characters added</p></div>
    <div class="user-list__row__link"></div>
  </div>
  <ul class="list">
  <% @students.each do |s| %>
    <%= render :partial => 'users/row', :locals => {:user => s} %>
  <% end %>
  </ul>
  <div class="row view-all">
    <div><%= link_to "View All", {:action => "students"}, {:class => "button large dark"} %></div>
  </div>
</section>

<section id="articles">
  <h3 class="section-header">Articles Edited</h3>
  <div class="row article-list__row list__header">
    <div class="article-list__row__title sort" data-sort="title"><p>Title</p></div>
    <div class="article-list__row__characters sort" data-sort="characters" title="<%= Article.character_def %>"><p>Characters added</p></div>
    <div class="article-list__row__views sort" data-sort="views" title="<%= Article.view_def %>"><p>Views since first revision</p></div>
    <div class="article-list__row__link"></div>
  </div>
  <ul class="list">
  <% @articles.each do |a| %>
    <%= render :partial => 'articles/row', :locals => {:article => a} %>
  <% end %>
  </ul>
  <div class="row view-all">
    <div><%= link_to "View All", {:action => "articles"}, {:class => "button large dark"} %></div>
  </div>
</section>
