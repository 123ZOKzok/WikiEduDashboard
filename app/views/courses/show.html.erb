<%= render :partial => 'nav', :locals => {:page => 0} %>

<%= render :partial => 'header', :locals => {:page => 0} %>

<section id="users">
  <h3 class="section-header">Student Editors</h3>
  <%= render :partial => 'users/list_header' %>
  <ul class="list">
  <% if @students.count > 0 %>
    <% @students.each do |s| %>
      <%= render :partial => 'users/row', :locals => {:user => s} %>
    <% end %>
  <% else %>
    <li class="row view-all">
      <div><%= t("course.students_none", title: @course.title) %></div>
    </li>
  <% end %>
  </ul>
  <% if @students.count > 0 %>
  <div class="row view-all">
    <div><%= link_to t("user.view_all"), {:action => "students"}, {:class => "button large dark"} %></div>
  </div>
  <% end %>
</section>

<section id="articles">
  <h3 class="section-header"><%= t("article.edited") %></h3>
  <%= render :partial => 'articles/list_header' %>
  <ul class="list">
  <% if @articles.count > 0 %>
    <% @articles.each do |a| %>
      <%= render :partial => 'articles/row', :locals => {:article => a} %>
    <% end %>
  <% else %>
    <li class="row view-all">
      <div><%= t("article.edited_none", title: @course.title) %></div>
    </li>
  <% end %>
  </ul>
  <% if @articles.count > 0 %>
  <div class="row view-all">
    <div><%= link_to t("article.view_all"), {:action => "articles"}, {:class => "button large dark"} %></div>
  </div>
  <% end %>
</section>
