<header>
  <h3><%= @course.title %></h3>
  <p><%= @course.start %> &mdash; <%= @course.end %></p>
  <div class="stat-display">
    <div class="stat-display__stat"><h4><%= number_to_human @course.articles.count %></h4> Articles Edited</div>
    <div class="stat-display__stat"><h4><%= number_to_human @course.users.count %></h4> Student Editors</div>
    <div class="stat-display__stat"><h4><%= number_to_human @course.character_sum %></h4> Characters Added</div>
    <div class="stat-display__stat"><h4><%= number_to_human @course.view_sum %></h4> Article Views</div>
  </div>
</header>

<section>
  <ul class="list">
    <li class="row user-list__row">
      <div class="user-list__row__name">Name</div>
      <div class="user-list__row__training">Completed training</div>
      <div class="user-list__row__revisions">Characters added</div>
      <div class="user-list__row__link"></div>
    </li>
  <% @students.each do |s| %>
    <%= render :partial => 'users/row', :locals => {:user => s} %>
  <% end %>
  </ul>
</section>
