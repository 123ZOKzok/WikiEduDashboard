<header>
  <h1>WikiEdu Dashboard</h1>
  <!-- <p class="subtitle">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at nisl quis nisl fermentum condimentum eu ut felis ed at nisl quis dolor sit amet.</p> -->
  <div class="stat-display">
    <div class="stat-display__stat"><h1><%= number_to_human @courses.count %></h1><small>WikiEdu Courses</small></div>
    <div class="stat-display__stat"><h1><%= number_to_human @users.count %></h1><small>Student Editors</small></div>
    <div class="stat-display__stat"><h1><%= number_to_human @revisions.sum(:characters) %></h1><small>Characters Added</small></div>
    <div class="stat-display__stat"><h1><%= number_to_human @articles.sum(:views) %></h1><small>Article Views</small></div>
  </div>
</header>

<section id="courses">
  <h5 class="section-header">All Current Courses &mdash; Fall 2014</h5>
  <div class="row course-list__row list__header">
    <div class="course-list__row__title sort" data-sort="title"><p>Current Courses</p></div>
    <div class="course-list__row__characters sort" data-sort="characters"><p>Characters Added</p></div>
    <div class="course-list__row__views sort" data-sort="views"><p>Views</p></div>
    <div class="course-list__row__students sort" data-sort="students"><p>Students</p></div>
    <div class="course-list__row__link"></div>
  </div>
  <ul class="list">
  <% @courses.each do |c| %>
    <%= render :partial => 'row', :locals => {:course => c} %>
  <% end %>
  </ul>
</section>