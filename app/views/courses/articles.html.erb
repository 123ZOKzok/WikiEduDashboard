<%= render :partial => 'nav', :locals => {:page => 2, :course => @course} %>

<%= render :partial => 'header', :locals => {:page => 2} %>

<section id="articles">
  <div class="section-header">
    <h3>Articles Edited</h3>
    <div class="sort-select">
      <select class="sorts" rel="articles">
        <option rel="asc" value="title">Title</option>
        <option rel="desc" value="characters">Characters added</option>
        <option rel="desc" value="views">Views</option>
      </select>
    </div>
  </div>
  <%= render :partial => 'articles/list_header' %>
  <ul class="list">
  <% if @articles_courses.count > 0 %>
    <% @articles_courses.each do |ac| %>
      <%= render :partial => 'articles/row', :locals => {:ac => ac} %>
    <% end %>
  <% else %>
    <li class="row view-all">
      <div><%= @course.title %> has not edited any articles</div>
    </li>
  <% end %>
  </ul>
</section>