<header class="course-page">
  <div class="container">
    <div class="title">
      <h2><%= @course.title %></h2>
      <h6><%= @course.school %> | <%= @course.term %></h6>
    </div>
    <div class="stat-display">
      <div class="stat-display__stat"><h3><%= number_to_human @course.article_count %></h3><small>Articles<br>Created</small></div>
      <div class="stat-display__stat"><h3><%= number_to_human @course.article_count %></h3><small>Articles<br>Edited</small></div>
      <div class="stat-display__stat"><h3><%= number_to_human @course.revisions.count %></h3><small>Total<br>Edits</small></div>
      <div class="stat-display__stat popover-trigger">
        <h3><%= number_to_human @course.user_count %></h3>
        <small>Student<br>Editors</small>
        <div class="popover">
          <h4><%= @course.users.student.where(trained: false).count %></h4>
          <p>have not completed training</p>
        </div>
      </div>
      <div class="stat-display__stat"><h3><%= number_to_human @course.character_sum %></h3><small>Characters<br>Added</small></div>
      <div class="stat-display__stat"><h3><%= number_to_human @course.view_sum %></h3><small>Article<br>Views</small></div>
    </div>
    <div class="details">
      <div class="details__detail">
        <h6>Instructor<%= @course.users.instructor.count > 1 ? "s" : "" %></h6>
        <p><%= user_links(@course.users.instructor, "inline") %></p>
      </div>
      <% if !@volunteers.nil? && @volunteers.count > 0 %>
      <div class="details__detail">
        <h6>Volunteer<%= @volunteers.count > 1 ? "s" : "" %></h6>
        <p><%= user_links(@volunteers, "inline") %></p>
      </div>
      <% end %>
      <% if @course.users.wiki_ed_staff.count > 0 %>
      <div class="details__detail">
        <h6>Wiki Edu Staff</h6>
        <p><%= user_links(@course.users.wiki_ed_staff, "inline") %></p>
      </div>
      <% end %>
      <div class="details__detail">
        <h6>Course Duration</h6>
        <p><%= @course.start %> &mdash; <%= @course.end %></p>
      </div>
      <div class="details__detail">
        <h6>View on Wikipedia</h6>
        <p><a class="inline" href="https://en.wikipedia.org/wiki/Education_Program:<%= @course.slug %>"><%= @course.title %></a></p>
      </div>
    </div>
  </div>
</header>