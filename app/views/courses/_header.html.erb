<header class="course-page">
  <div class="title">
    <h2><%= @course.title %></h2>
    <h6><%= @course.school %> | <%= @course.term %></h6>
  </div>
  <div class="stat-display <%= page > 0 ? 'half' : '' %>">
    <% if(page == 0 || page == 2) %>
    <div class="stat-display__stat"><h3><%= number_to_human @course.article_count %></h3><small>Articles Edited</small></div>
    <% end %>
    <% if(page == 0 || page == 1) %>
    <div class="stat-display__stat"><h3><%= number_to_human @course.user_count %></h3><small>Student Editors</small></div>
    <% end %>
    <% if(page == 0 || page == 1) %>
    <div class="stat-display__stat"><h3><%= number_to_human @course.character_sum %></h3><small>Characters Added</small></div>
    <% end %>
    <% if(page == 0 || page == 2) %>
    <div class="stat-display__stat"><h3><%= number_to_human @course.view_sum %></h3><small>Article Views</small></div>
    <% end %>
  </div>
  <div class="details">
    <div class="details__detail"><h6>Course Duration</h6><p><%= @course.start %> &mdash; <%= @course.end %></p></div>
    <div class="details__detail">
      <h6>View on Wikipedia</h6>
      <p><a href="https://en.wikipedia.org/wiki/Education_Program:<%= @course.slug %>"><%= @course.title %></a></p>
    </div>
  </div>
</header>