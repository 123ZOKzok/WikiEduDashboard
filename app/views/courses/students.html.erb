<%= render :partial => 'nav', :locals => {:page => 1, :course => @course} %>

<header class="subpage">
  <div class="title">
    <h2>Student Editors</h2>
    <p class="subtitle"><%= @course.title %></p>
  </div>
  <div class="stat-display half">
    <div class="stat-display__stat"><h3><%= number_to_human @course.user_count %></h3><small>Student Editors</small></div>
    <div class="stat-display__stat"><h3><%= number_to_human @course.character_sum %></h3><small>Characters Added</small></div>
  </div>
  <div class="row user-list__row table__header user-list__sort">
    <div class="user-list__row__name sort" data-sort="name"><p>Name</p></div>
    <div class="user-list__row__training sort" data-sort="training"><p>Completed training</p></div>
    <div class="user-list__row__characters sort" data-sort="characters"><p>Characters added</p></div>
    <div class="user-list__row__link"></div>
  </div>
</header>

<section id="users">
  <ul class="list">
  <% @students.each do |s| %>
    <%= render :partial => 'users/row', :locals => {:user => s} %>
  <% end %>
  </ul>
</section>