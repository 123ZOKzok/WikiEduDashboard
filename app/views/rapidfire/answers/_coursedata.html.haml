= render partial: "rapidfire/answers/errors", locals: {answer: answer}
= render partial: "rapidfire/answers/question_text", locals: {f: f, answer: answer}
- if answer.question.multiple
  %p.survey__question__assistive-text
    %i Select all that apply
= f.text_field :answer_text, :required => is_required_question?(answer), :class => "hidden", :data => { :course_question_type => answer.question.course_data_type.downcase }
%select{:data => {:course_question_select => true, :chosen_select => true, :placeholder => answer.question.placeholder_text }, :class => "loading", :multiple => answer.question.multiple }
= render partial: "surveys/loading"