<%= render partial: "rapidfire/answers/errors", locals: {answer: answer} %>

<%= render partial: "rapidfire/answers/question_text", locals: {f: f, answer: answer} %>

<%= f.select :answer_text, 
    answer.question.options, 
    { :include_blank => "Select an option" } , 
    :required => is_required_question?(answer),
    :multiple => answer.question.multiple,
    :data => {:chosen_select => true}
     %>