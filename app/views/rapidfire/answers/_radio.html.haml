= render partial: "rapidfire/answers/errors", locals: {answer: answer}
= render partial: "rapidfire/answers/question_text", locals: {f: f, answer: answer}

- answer_options(answer, @course).each_with_index do |option, index|
  %label.survey__multiple-choice-field
    - if option.is_a?(Array)
      = f.radio_button :answer_text, option[0], :required => is_required_question?(answer)
      .label
        %span.survey__multiple-choice-field__option= option[1].html_safe
    - else
      = f.radio_button :answer_text, option, :required => is_required_question?(answer)
      .label
        %span.survey__multiple-choice-field__option= option.html_safe

    .survey__multiple-choice-field__radio-circle