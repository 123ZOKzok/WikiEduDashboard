<div class='container'>
<div class='section-header'>

<h2>
  <%= @question_group.name %> Questions
</h2>

<%= form_for @question_group do |f| %>
  <%- if @question_group.errors.any? %>
    <ul>
      <%- @question_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div><%= f.label :intro_slide %></div>
  <div><%= f.text_area :intro_slide %>
  <%= f.submit 'Save', :class => 'button button--no-margin'%></div>
<% end %>

<%= link_to "New Question", new_question_group_question_path(@question_group), :class => 'button button--no-margin' %>
</div>
<hr/>

<ul class='list list--survey'>
  <%= render partial: "question", collection: @questions %>
</ul>

</div>
