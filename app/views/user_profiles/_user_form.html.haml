#profile
  = form_for(@user_profile, url: {action: "update", :username => @user.username}, html: { class: 'rails_editable' }) do
    #disclaimer
      .module
        .module__data
          = t("users.disclaimer")
    .header
      #user_name
        %p
          User: #{@user.username}

      - if current_user == @user
        #edit_profile
          .controls
            %button.button.rails_editable-edit
              Edit Profile

    #details
      .rails_editable-field
        #user_bio
          %p.rails_editable-content
            = preserve @user&.user_profile&.bio
          = text_area(:user_profile, :bio, class: 'rails_editable-input',placeholder: 'Add your Bio (optional)')

      #user_id
        - if current_user == @user || current_user&.admin?
          #icon
            &#x2709;
          %p
            #{@user.email}
