#profile
  = form_for(@user_profile, url: {action: "update", :username => @user.username}, html: { class: 'rails_editable',  multipart: true }) do
    #disclaimer
      .module
        .module__data
          = t("user_profiles.disclaimer")

    #profile_left
      .rails_editable-field
        #user_image
          - if @user&.user_profile&.image.present?
            = image_tag @user.user_profile.image.url(:thumb)
          = file_field(:user_profile, :image, class: 'rails_editable-input')

    #profile_right
      .header
        #header_right
          #user_name
            %p
              User: #{@user.username}

          - if current_user == @user
            #edit_profile
              .controls
                %button.button.rails_editable-edit
                  = t('editable.edit_details')

      #details
        .rails_editable-field
          #user_bio
            %p.rails_editable-content
              = preserve @user&.user_profile&.bio
            = text_area(:user_profile, :bio, class: 'rails_editable-input', placeholder: t("user_profiles.bio_placeholder"))

        #user_id
          - if current_user == @user || current_user&.admin?
            #icon
              &#x2709;
            %p
              #{@user.email}

        .rails_editable-field
          #user_location
            %p
              #icon
                &#x27a4;
              .rails_editable-content
                = @user&.user_profile&.location
            = text_area(:user_profile, :location, class: 'rails_editable-input', placeholder: 'Add your location(optional)')

        .rails_editable-field
          #work_status
            #icon
              #student_icon
                &#x1f393;
              #work_icon
                &#x270D;

            #content
              Student
              %input{:name => "work_status", :type => "radio", :value => "student"}
              Employed
              %input{:name => "work_status", :type => "radio", :value => "employed"}
              %br/
              Work place:
              %p.rails_editable-content
                = @user&.user_profile&.work_status
              = text_area(:user_profile, :work_status, class: 'rails_editable-input', placeholder: 'Institution name(optional)')
