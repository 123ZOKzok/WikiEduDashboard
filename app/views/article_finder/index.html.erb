<% content_for :after_title do " - Article Finder" end %>
<header class="main-page">
  <div class="container">
    <h1>Article Finder <%= @category %></h1>
  </div>
</header>
<div class="container">
<section>
<div class="section-header">
<h3><%= form_tag(method: 'get') do %>
  Put in a category name, including the prefix, like "Category:Feminism"<br/>
  <%= label_tag(:category, "category") %>
  <%= text_field_tag(:category) %>
  <%= label_tag(:depth, "depth") %>
  <%= text_field_tag(:depth) %>
  <!-- <%= label_tag(:minviews, "minimum views") %>
  <%= text_field_tag(:minviews) %>
  <%= label_tag(:maxwp10, "maximum completeness") %>
  <%= text_field_tag(:maxwp10) %> -->
  <%= submit_tag("Go") %>
<% end %></h3>
</div>
<div>
  <ul class="list">
    <% @articles.each do |article| %>
      <%= render :partial => 'row', :locals => {:article => article} %>
    <% end %>
  </ul>
</div>
</section>
</div>
