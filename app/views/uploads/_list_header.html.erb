<div class="row article-list__row list__header article-list__sort">
  <div class="desktop-only-flex row__wrapper">

    <div class="article-list__row__title">
      <p><%= t("file.image") %></p></div>
    <div class="article-list__row__title sort" data-sort="file_name">
      <p><%= t("file.file_name") %></p></div>
    <div class="article-list__row__title sort" data-sort="uploaded_by_by">
      <p><%= t("file.uploaded_by") %></p></div>
    <div class="article-list__row__characters sort" data-default-order="desc" data-sort="usage">
      <p><%= t("file.usage") %></p></div>
    <div class="article-list__row__views sort desc" data-default-order="desc" data-sort="date_time">
      <p><%= t("metrics.date_time") %></p></div>
    <div class="article-list__row__link"></div>
  </div>
</div>
