<div class="row revision-list__row list__header revision-list__sort">
  <div class="row__wrapper">
    <div class="revision-list__row__title sort" data-sort="title">
      <p><%= t("article.title") %></p>
    </div>
    <div class="revision-list__row__date sort desc" data-default-order="desc" data-sort="date">
      <p class="date"><%= t("metrics.date_time") %></p>
    </div>
    <div class="revision-list__row__characters sort" data-default-order="desc" data-sort="characters">
      <p class="characters"><%= t("metrics.char_added") %></p>
    </div>
    <div class="revision-list__row__views sort" data-default-order="desc" data-sort="views">
      <p class="views"><%= t("metrics.view") %></p>
    </div>
    <div class="revision-list__row__link"></div>
  </div>
</div>
