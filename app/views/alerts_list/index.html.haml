.container
  %h1 Alerts

  %table.list-basic
    %tr
      %th Date/Time
      %th Type
      %th Course
      %th User
    - @alerts.each do |alert|
      %tr
        %td= alert.created_at
        %td= alert.type
        %td= link_to(alert.course.slug, "/courses/#{alert.course.slug}") if alert.course
        %td= link_to(alert.user.username, "/users/#{alert.user.username}") if alert.user
