- if @user&.isinstructor?
  = render 'users/profile_nav'

#profile
  %h2
    User: #{@user.username}
  - if current_user == @user || current_user&.admin?
    %h4
      &#x2709; #{@user.email}

.container
  - if @user&.isinstructor?
    #statistics
      %br/
      = render 'users/profile_cumulativestats', presenter: @presenter

  #coursedetails
    - if @courses_user.present?
      %h3
        = t("courses.course_details")
      %br/
      - @courses_user.each do |c|
        %a.course{:href => "/courses/#{c.course.slug}"}
          %span.button.border
            = t("courses.view_page")
          .course-title
            = c.course.title
          .course-details
            .col
              .course-details_title
                = t("courses.school")
              .course-details_value
                = c.course.school
            .col
              .course-details_title
                = t("courses.term")
              .course-details_value
                = c.course.term
            .col
              .course-details_title
                = t("courses.students_count")
              .course-details_value
                = c.course.user_count
            .col
              .course-details_title
                = t("courses.user_role")
              .course-details_value
                = course_role_name(c.role)
    -else
      %h4
        #{@user.username} is not a part of any Course yet!
