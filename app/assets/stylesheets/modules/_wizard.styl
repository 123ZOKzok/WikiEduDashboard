.wizard
  background-color rgba(smoke, .95)
  bottom 0
  left 0
  opacity 0
  padding-top 80px
  position fixed
  right 0
  text-align center
  top 0
  transition opacity .2s ease-in-out
  z-index 1
  &.active
    opacity 1
  .wizard__panel
    background-color white
    bottom 0
    box-shadow 0 0 15px 0 rgba(0, 0, 0, .2)
    display none
    left 0
    margin-top -300px
    max-height 600px
    padding 20px
    position absolute
    right 0
    top 50%
    +above(desktop)
      left 50%
      margin-left -430px
      max-width 860px
      top 50%
    &.active
      display block
    > h3
      font-weight 300
    p
      color dove
    .section-header
      padding 0
      .controls
        padding 0
    .wizard__form
      height 80%
      .column
        col(1/2)
      p
        text-align left
      input, textarea
        margin-bottom 10px
        width 100%
    .wizard__panel__options
      padding 20px 0
    .wizard__option
      border 1px solid mischka
      cursor pointer
      margin-bottom 20px
      padding 20px
      position relative
      text-align left
      transition all .2s ease-in-out
      &:hover
        background smoke
      &.selected
        .wizard__option__border
          border-color transparent
          box-shadow 0 0 0 4px bayoux inset
        .wizard__option__checkbox
          background-color bayoux
          border-color transparent
      &.half
        padding-bottom 60px
        +above(desktop)
          col(1/2)
      .wizard__option__border
        box-shadow 0 0 0 4px transparent inset
        height 100%
        left 0
        pointer-events none
        position absolute
        top 0
        transition all .2s ease-in-out
        width 100%
      .wizard__option__checkbox
        border 1px solid mischka
        border-width 0 0 1px 1px
        height 30px
        position absolute
        right 0
        top 0
        transition all .2s ease-in-out
        width 30px
      .wizard__option__description
        height 0
        overflow hidden
        width 100%
        &.open
          height auto
      .wizard__option__more
        background athens
        border-top 1px solid mischka
        bottom 0
        left 0
        padding 5px 0 9px
        position absolute
        right 0
        transition all .2s ease-in-out
        &:hover
          background mischka
      h3
        font-size 18px
      p
        margin 0
    .wizard__controls
      font-size 12px
      left 20px
      position absolute
      top -30px
      transition all 0.2s
      +above(desktop)
        left 0
      a
        color dove
        margin-right 20px
    .wizard__panel__controls
      border-top 1px solid mischka
      bottom 0
      padding 20px 0
      position absolute
      width calc(100% - 40px)
      .left
        col(1/3)
        padding 9px 0
        text-align left
        p
          font-size 14px
      .right
        col(2/3)
        text-align right
        div
          display inline-block
        p.red
          color burnt