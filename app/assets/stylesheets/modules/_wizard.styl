.wizard
  background-color rgba(1, 1, 1, 0.5)
  bottom 0
  left 0
  padding-top 80px
  position fixed
  right 0
  top 0
  z-index 1
  .wizard__panel
    background-color white
    bottom 0
    box-shadow 0px 0px 15px 0px rgba(0,0,0,0.2)
    display none
    left 0
    margin-top -300px
    max-height 600px
    padding 20px
    position absolute
    right 0
    top 50%
    +above(desktop)
      left 50%
      margin-left -400px
      max-width 800px
      padding 20px
      top 50%
    &.active
      display block
    .section-header
      padding 0
      .controls
        padding 0
    .wizard__form
      columns 2
      height 80%
      p
        column-break-inside avoid
        -webkit-column-break-inside avoid
        text-align left
    .wizard__option
      border 1px solid mischka
      margin-bottom 20px
      padding 20px