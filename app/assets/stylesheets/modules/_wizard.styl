.wizard
  background-color rgba(smoke, 0.9)
  bottom 0
  left 0
  opacity 0
  padding-top 80px
  position fixed
  right 0
  top 0
  transition opacity 0.2s ease-in-out
  z-index 1
  &.active
    opacity 1
  .wizard__panel
    background-color white
    box-shadow 0px 0px 15px 0px rgba(0,0,0,0.2)
    display none
    left 0
    margin-top -300px
    max-height 600px
    padding 20px
    position absolute
    right 0
    top 50%
    +above(desktop)
      left 50%
      margin-left -400px
      max-width 800px
      padding 20px
      top 50%
    &.active
      display block
    .section-header
      padding 0
      .controls
        padding 0
    .wizard__form
      height 80%
      .column
        col(1/2)
      p
        column-break-inside avoid
        -webkit-column-break-inside avoid
        text-align left
      input, textarea
        margin-bottom 10px
        width 100%
    .wizard__option
      border 1px solid mischka
      cursor pointer
      margin-bottom 20px
      padding 20px
      transition all 0.2s ease-in-out
      &:hover
        background smoke
      &.selected
        border-left-width 5px