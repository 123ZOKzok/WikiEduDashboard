.cohort-select, .sort-select
  border 3px solid smoke
  float left
  height 41px
  margin 10px 10px 10px 0
  overflow hidden
  +above(desktop)
    margin 0
    position absolute
    right 20px
    top 20px

.cohort-select
  background url('../images/arrow.svg') no-repeat 97% white
  width 181px
  select.cohorts
    background transparent
    border 0
    border-radius 0
    color bayoux
    font-family "Roboto"
    font-size 14px
    height 41px
    margin-top -3px
    padding 5px 10px
    width 219px
    -webkit-appearance none


.sort-select
  background url('../images/sort.svg') no-repeat 42% white
  width 64px
  &.inset
    right 211px
  select.sorts
    background transparent
    border 0
    border-radius 0
    color bayoux
    height 41px
    padding-top 41px
    width 102px
    -webkit-appearance none


select
  font-size 16px
  &:active, &:focus
    outline none
    background none