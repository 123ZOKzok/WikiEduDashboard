.profile_container
	margin-top 50px
	border 1px solid $border_lt

#profile
	margin 0 auto
	position relative
	overflow hidden
	width 100%
	border 1px solid #808080
	background-color 	#575d99
	display block
	color #f8f8ff
	font-size 20px
	padding-bottom 10px

	#disclaimer
		display none

		.module
			background-color #fcf8e3
			margin 0 auto

			.module__data
				font-size 12px
				color black

	#profile_left
		width 20%
		float left
		#user_image
			img
				height 150px
				border-radius 100%
				width 130px
				border 1px solid black
				float: right

			.rails_editable-input
				background-color: #e7e7e7;
				display none

	#profile_right
		width 80%
		float right
	  .header
			height: 40px;

			#user_name
				float left
				padding-left 2%
				padding-top 8px

				p
					font-weight 700
					margin 0 auto
					text-decoration underline

			#edit_profile
				.controls
					padding 2px 0
					position relative

		#details
			width 100%

			#user_bio
				float left
				width 38%
				margin -5px 0 0 2%

				.rails_editable-input
					height 40px !important
					width 90% !important
					background-color: #e7e7e7;
					color #000
					display none

				p
					font-size 12px
					font-weight 700
					display inline-block
					width 70%
					text-decoration none

			#user_id
				float right
				width 60%
				border-left 2px solid white
				padding-left 3%
				border-left 2px solid #fff

				#icon
					font-weight 900
					display inline

				p
					font-size 18px
					display inline

			#user_location,#work_status
				clear both
				width 100%
				margin 2px 0 0 2%

				.rails_editable-input
					height 40px !important
					width 90% !important
					background-color: #e7e7e7;
					color #000
					display none

#profile_details
	padding-left 5%
	padding-right 5%

	#user_form
	background-color orange
	color red

	#statistics
		padding-top 20px

		#inner_statistics
			padding-top 10px

	#course-details
		padding-top 30px



// making user profile pages responsive
@media only screen and (max-width: 500px)
	#profile
		padding unset
		.header
			height unset
			#user_name
				width 100%
				float none
				p
					font-weight 0
					font-size 12px

			#edit_profile
				display none

		#details
			#user_bio
				padding-left 2%
				p
					font-size 8px

			#user_id
				border-left 1px
				padding-left 0

				#icon
					font-size 12px
					font-weight 0

				p
					font-size 10px
