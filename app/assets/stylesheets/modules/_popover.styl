.popover-trigger
  position relative
  &:hover
    .popover
      opacity 1
      top 110%
  .popover
    background-color white
    border 1px solid manatee
    border-radius 5px
    left -15%
    opacity 0
    padding 10px 15px
    pointer-events none
    position absolute
    top 125%
    transition opacity .2s linear, top .2s linear
    width 130%
    z-index 4
    &:before
      border-bottom 6px solid white
      border-right 6px solid transparent
      border-left 6px solid transparent
      top -6px
      content ''
      display block
      left 50%
      margin-left -6px
      position absolute
    h4
      color dove
    p
      color manatee
      font-size 11px
      line-height 1.4