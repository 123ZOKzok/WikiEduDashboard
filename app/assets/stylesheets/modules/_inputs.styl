

// Styling for basic inputs
input,
textarea,
select,
.form-control
  background-color #fff
  border 1px solid $border_lt
  border-radius 0px
  font-family body-font
  color body-color
  font-size 15px
  padding 10px
  outline none
  transition border-color 125ms ease
  -webkit-font-smoothing antialiased
  max-width 100%

  &:focus
    border-color $brand_primary

  &::-ms-expand
    display none

// Reset height for some specific input types
textarea, textarea.form-control,
select[multiple], select[multiple].form-control,
input[type='radio'], input[type='radio'].form-control,
input[type='checkbox'], input[type='checkbox'].form-control
  height auto

// Custom dropdown arrow for selects
select:not([multiple])
  background-image url('data:image/svg+xml;charset=utf-8;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIGZpbGw9IiM2NjY2NjYiIGhlaWdodD0iMjQiIHZpZXdCb3g9IjAgMCAyNCAyNCIgd2lkdGg9IjI0Ij4NCiAgICA8cGF0aCBkPSJNNyAxMGw1IDUgNS01eiIvPg0KICAgIDxwYXRoIGQ9Ik0wIDBoMjR2MjRIMHoiIGZpbGw9Im5vbmUiLz4NCjwvc3ZnPg==')
  appearance none
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  background-position calc(100% - 4px) 9px
  background-repeat no-repeat
  padding-right 30px

input.invalid, label.invalid input
  border-color warning
  box-shadow 0 0 0 1px warning

// default vertical resize for textarea
textarea
  resize vertical

p.graded
  clear both

pre
  margin 0
  padding 0
  border 0
  outline 0

.expandingArea
  position relative
  background-color white
  border 1px solid border_lt

  & > textarea, & > pre
    white-space pre-wrap
    word-wrap break-word
    border 0
    background transparent
    line-height 1.4

  & > textarea
    box-sizing border-box
    width 100%
    height 100px

  & > pre
    display none
    padding-bottom 20px

  &.active
    & > textarea
      overflow hidden
      top 0
      left 0
      height 100%
      resize none

    & > pre
      display block
      visibility hidden

      span
        float none

.course-description .expandingArea.active pre
  display none

.input_wrapper
  font-size 15px
  color body-color
  font-weight 400
  display block

  // overflow hidden
  &.inline
    vertical-align middle
    display inline-block
    > div
      display inline-block
    > span
    > .tooltip-trigger > span
      display inline-block
      margin-right 5px

.select_wrapper
  display inline-block
  select
    min-width 170px


