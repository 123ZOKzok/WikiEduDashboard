@keyframes bounce {
  0% {
    transform scale(1)
  }
  33.3% {
    transform scole(1.0066)
  }
  50% {
    transform scale(1.01)
  }
  66.6% {
    transform scale(1.0066)
  }
  100% {
    transform scale(1)
  }
}

#react_root
  &.timeline
    padding 10px
    a
      cursor pointer
    > li
      margin 0
    .view-all
      border-bottom 0
      margin-top 20px
  .week
    display block
    margin 0 0 30px
    position relative
    &:first-child
      margin-top 20px
    > div
      p
        border-bottom 1px solid dove
        color dove
        padding-bottom 5px
        margin-bottom 15px
      > .button
        float right
    .list
      margin-top 15px
  .week, .block
    +.view-all
      border-bottom 0
  .block +.view-all
    margin-top 20px
  .block
    background-color white
    border 1px solid zircon
    border-width 0 1px 1px
    left 0
    margin 0 0 15px 0
    padding 18px 20px 20px
    position relative
    width 100%
    transition all .25s ease-out
    -moz-user-select none
    &:first-child
      border-width 1px
    &:last-child
      margin-bottom 0
    &.editable
      cursor move
      &:hover
        box-shadow 0 0 15px 0 rgba(0, 0, 0, .2)
        animation bounce .5s
      .drag-handle
        display block
    &.dragging
      opacity 0
      // transform scale(1.05)
    &.block-leave-active
      opacity 0
      transform scale(0.5)
    p, ul
      color dove
      &.content
        margin-top 10px
        font-size 15px
    h4
      color dove
      font-size 18px
      letter-spacing .031em
    textarea
      width 100%
    input[type='text'], input[type='date'], select
      display block
      float left
      margin-right 10px
      width 150px
      &.title
        width 200px
    input[type='checkbox']
      margin 20px 5px
    .button
      clear right
      float right
      margin 0
    hr
      margin-top 20px
      padding-bottom 10px
  .gradeable
    overflow hidden

.drag-handle
  display none
  left 0
  position absolute
  top 10px
  width 15px
  .drag-handle__bar
    background-color mercury
    height 3px
    margin-bottom 2px
    width 100%
    &:last-child
      margin-bottom 0

input[type="radio"]
  -webkit-appearance radio
input[type="checkbox"]
  -webkit-appearance checkbox