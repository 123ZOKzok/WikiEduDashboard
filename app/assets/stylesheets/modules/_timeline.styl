#react_root
  &.timeline
    padding 10px
    a
      cursor pointer
    > li
      margin 0
  .week
    display block
    margin 0 0 30px
    position relative
    &:first-child
      margin-top 20px
    > p
      border-bottom 2px solid dove
      color dove
      padding-bottom 5px
      margin-bottom 20px
    .list
      margin-top 20px
    > div > .button
      float right
  .block
    background-color white
    border 1px solid zircon
    border-width 0 1px 1px
    left 0
    margin 0
    padding 18px 20px 20px
    width 100%
    transition all .25s ease-out
    &:first-child
      border-width 1px
    &.editable
      cursor move
      &:hover
        box-shadow 0 0 15px 0 rgba(0, 0, 0, .2)
    &.dragging
      opacity 0
      // transform scale(1.05)
    &.block-leave-active
      opacity 0
      transform scale(0.5)
    p, ul
      color dove
      &.content
        margin-top 10px
        font-size 15px
    h4
      color dove
      font-size 18px
      letter-spacing .031em
    textarea
      width 100%
    input[type='text'], input[type='date'], select
      display block
      float left
      margin-right 10px
      width 200px
    input[type='checkbox']
      margin 20px 5px 10px
    .button
      clear right
      float right
      margin 0
    hr
      margin-top 20px
      padding-bottom 10px

input[type="radio"]
  -webkit-appearance radio
input[type="checkbox"]
  -webkit-appearance checkbox