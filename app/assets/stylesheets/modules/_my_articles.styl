.my-articles
  margin-bottom 0

  .peer-review-count
    border-bottom 1px dashed
  div.my-articles-header
    margin-bottom 15px

    .tooltip
      p
        font-size 12px

.my-assignment

.my-assignment-button
  div
    float right
    margin-left 10px

.my-assignment-header
  display inline
  .title h4
    color $text
    display inline
    font-size 130%
    font-weight normal
  .editors
    display inline-block
    font-size 90%

.my-assignment-checklist
  font-size 120%
  padding 20px 40px
  overflow-y auto
  max-height 80%

  h2
    text-align center

  dd
    margin 10px

  button
    float right

.feedback
  font-size 120%
  padding 20px 40px
  overflow-y auto

  div
    float none

  h2
    text-align left
    display inline

  .okay
    float right

.feedback-body
  padding 20px

  .rating-description
    font-size 75%
    color bayoux

.feedback-form
  margin-top 10px

hr.assignment-divider
  margin-bottom 4px
