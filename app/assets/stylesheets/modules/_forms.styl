.vertical-form
  float left
  margin-top 20px
  +above(desktop)
    margin-left 20px
    margin-top 0
  label
    span
      margin-bottom 2px
    div
      clear both
      input
        margin-bottom 10px
        width 200px
  p
    span:last-child
      display inline-block
      font-weight bold
      margin-bottom 10px