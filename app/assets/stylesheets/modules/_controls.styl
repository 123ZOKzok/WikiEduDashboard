.controls
  padding 20px 0
  position absolute
  right 0
  top 0
  text-align right

.button
  background-color mercury
  border 1px solid zircon
  border-radius 4px
  color dove
  cursor pointer
  display inline-block
  font-family "Roboto"
  font-size 14px
  margin-left 10px
  padding 8px 15px 9px
  transition background .15s ease-out
  &:hover
    background-color white
    border-bottom 1px solid zircon
  &.large
    padding 12px 27px
  &.dark
    background-color bayoux
    color white
    &:hover
      background-color manatee
  &.danger:hover
    background-color burnt
    color white

.button.arrow:hover
  background-color bayoux
  border-bottom 1px solid manatee
  color white
  font-weight bold
  &:after
    content '\003e'
    margin-left 5px

input, textarea, select
  background-color white
  border 1px solid dove
  border-radius 0
  font-size 15px
  outline none
  padding 10px
  -webkit-appearance none
  &:active, &:focus
    font-size 15px !important

input[type=text], input[type=date], select
  height 40px