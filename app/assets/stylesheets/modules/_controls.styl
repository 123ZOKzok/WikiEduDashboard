.controls
  padding 20px 0
  position absolute
  right 0
  top 0
  text-align right

.button
  background-color mercury
  border 1px solid zircon
  border-radius 4px
  color dove
  cursor pointer
  display inline-block
  font-family "Roboto"
  font-size 14px
  line-height 1.5
  margin-left 10px
  padding 8px 20px 9px
  transition background .15s ease-out
  &:hover
    background-color white
    border-bottom 1px solid zircon
  &.large
    padding 18px 27px
  &.dark
    background-color bayoux
    color white
    &:hover
      background-color manatee
  &.danger:hover
    background-color burnt
    color white

.button.arrow:hover
  background-color bayoux
  border-bottom 1px solid manatee
  color white
  font-weight bold
  &:after
    content '\003e'
    margin-left 5px