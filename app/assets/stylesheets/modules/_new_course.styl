.wizard
  background-color rgba(1, 1, 1, 0.5)
  bottom 0
  left 0
  padding-top 80px
  position fixed
  right 0
  top 0
  z-index 1
  .wizard__panel
    background-color white
    bottom 0
    box-shadow 0px 0px 15px 0px rgba(0,0,0,0.2)
    left 50%
    margin-top -300px
    margin-left -400px
    max-height 600px
    max-width 800px
    padding 20px
    position absolute
    right 0
    top 50%
    .section-header
      padding 0
      .controls
        padding 0
    .wizard__form
      columns 2
      height 80%
      p
        column-break-inside avoid
        -webkit-column-break-inside avoid
        text-align left