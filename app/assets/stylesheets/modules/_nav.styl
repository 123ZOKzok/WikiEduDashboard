aside
  background-color white
  overflow hidden
  padding 0 20px
  // position fixed
  // width 100%
  // z-index 100

.logo
  float left
  width 90px
  padding 20px 0
  .logo__link
    display inline-block
    &:hover
      border-bottom 0
    img
      width 60px
      height 60px

.login
  color bayoux
  float right
  padding 20px 0

nav
  float left
  width 440px
  padding 20px 0
  .nav__item
    cursor pointer
    padding 0 0 0 20px
    .nav__item__subnav
      list-style-type none
      text-align left
      li
        col(1/3)
        a
          color manatee
          font-size 15px
        &.active a
          color bayoux
          font-size 14px
          font-weight bold
        text-align center
        &:first-child
          text-align left
        &:last-child
          text-align right
    > .subtitle a
      color bayoux
    p
      padding 5px 0
    &:first-child
      .subtitle
        border-bottom 1px solid zircon