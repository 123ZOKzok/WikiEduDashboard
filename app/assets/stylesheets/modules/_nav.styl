aside
  background-color white
  box-shadow 0px 5px 10px -5px rgba(0,0,0,0.2)
  max-width 1100px
  overflow hidden
  padding 0 20px
  position fixed
  width 100%
  z-index 100

.logo
  float left
  font-size 0
  width 50px
  padding 15px 0
  .logo__link
    display inline-block
    font-size 0
    &:hover
      border-bottom 0
    img
      width 50px
      height 50px

.login
  color bayoux
  clear both
  float left
  height 60px
  padding 0
  +above(desktop)
    clear none
    float right
    height 80px
    padding 22px 0
  p
    font-size 15px
    margin 5px auto
    padding 5px
    +above(desktop)
      margin 0

nav
  float left
  height 80px
  padding 22px 0
  .nav__item
    cursor pointer
    float left
    overflow hidden
    padding 0 0 0 20px
    p
      color manatee
      font-size 15px
    .subtitle a
      color manatee
    &.active a
      color bayoux
      font-size 15px
    &.bordered
      border-left 1px solid manatee
      padding-left 10px
      margin-left 10px
    p
      padding 5px