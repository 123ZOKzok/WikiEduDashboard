aside
  background-color white
  overflow hidden
  padding 0 20px
  position fixed
  width 100%
  z-index 100

.logo
  float left
  font-size 0
  width 50px
  padding 15px 0
  .logo__link
    display inline-block
    font-size 0
    &:hover
      border-bottom 0
    img
      width 50px
      height 50px

.login
  color bayoux
  float right
  padding 20px 0

nav
  float left
  height 80px
  width 440px
  padding 22px 0
  .nav__item
    cursor pointer
    float left
    overflow hidden
    padding 0 0 0 20px
    p
      color manatee
      font-size 15px
    .subtitle a
      color manatee
    &.active a
      color bayoux
      font-size 15px
    &.bordered
      border-left 1px solid manatee
      padding-left 10px
      margin-left 10px
    p
      padding 5px