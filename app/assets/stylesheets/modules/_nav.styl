.main-logo
  display inline-block
  width 60px
  height 60px
  background transparent url('/images/wiki-logo.png') no-repeat center
  background-size 100% auto
  margin 0 auto
  overflow hidden
  text-indent -9999px
  &:hover
    border-bottom 0

nav
  .nav__item
    border-bottom 1px solid zircon
    cursor pointer
    padding 20px 0 20px 20px
    &.active
      background-color alabaster
    .nav__item__subnav
      list-style-type none
      margin-left 20px
      margin-top 10px
      text-align left
      li
        margin-left 0
        a
          color manatee
        &.active
          a
            color bayoux
            font-weight bold
            &:before
              content '\25B8'
              margin-left -13px
              margin-right 5px
    > .subtitle a
      color bayoux
    p
      padding 5px 0