aside
  background-color white
  box-shadow 0 5px 10px -5px rgba(0, 0, 0, .2)
  overflow hidden
  position fixed
  width 100%
  z-index 100

.logo
  float left
  font-size 0
  width 50px
  padding 15px 0
  .logo__link
    display inline-block
    font-size 0
    &:hover
      border-bottom 0
    img
      width 50px
      height 50px

.home
  clear none
  color bayoux
  float left
  height 60px
  margin-left 20px
  padding 22px 0
  +above(desktop)
    height 80px
  p
    font-size 15px
    margin 5px auto
    padding 5px
    +above(desktop)
      margin 0

.login
  @extends .home
  float right

nav
  padding 22px 0
  .nav__item
    float left
    overflow hidden
    padding 0 20px 24px 0
    text-transform uppercase
    +above(desktop)
      padding 23px 20px 24px 0
    p
      color manatee
      font-size 15px
    .subtitle a
      color manatee
    &.active a,
    a:hover
      border-bottom 2px solid bayoux
      cursor pointer
      padding-bottom 3px
    &.active a
      color bayoux
    &.bordered
      border-left 1px solid manatee
      padding-left 10px
      margin-left 10px
    p
      padding 5px

.course_navigation
  background-color white
  nav
    padding 20px 0 0 20px
    +above(desktop)
      padding 0