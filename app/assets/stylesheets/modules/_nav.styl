aside
  background-color white
  border-bottom 1px solid rgba(0,0,0,.1)
  position relative
  overflow hidden
  width 100%
  font-size 15px
  -webkit-font-smoothing auto
  line-height 1

  &.fluid
    .container
      max-width none
      padding-left 15px
      padding-right 15px


  a
    text-decoration none
    margin-left 24px
    display inline-block
    color inherit

    &:hover, &:active
      color bayoux

  .logo
    line-height 0
    a
      display inline-block
      margin 0
      border none

    img
      width 35px
      height 35px

  .container
    height $nav_height
    display flex
    align-items center
    justify-content space-around

  .home
    flex 1
    +below(desktop)
      flex none

  .search
    margin-left auto
    text-align center
    border-left 1px solid lighten($border_lt, 40%)
    border-right 1px solid lighten($border_lt, 40%)
    > form > button
      vertical-align middle
      color #A0A0A0
      line-height $nav_height
      width 43px
      padding-right 10px
      margin-left -10px
    input[type="text"]
      vertical-align middle
      height $nav_height
      width 173px
      border none
      border-radius 0
      font-family inherit
      font-size 14px
      outline 0
      padding 10px
      -webkit-appearance none
      -webkit-font-smoothing: antialiased;

      &:-ms-input-placeholder
        color $text_md
      &::-moz-placeholder
        color $text_md
      &::-webkit-input-placeholder
        color $text_md

    +below(desktop)
      display none

  .login
    text-align right

    b
      +below(desktop)
        display none

    i
      margin-right 4px
      margin-bottom: -1px;
      display: inline-block;
      font-size 16px
      vertical-align middle

    .expand
      overflow hidden
      display inline-block
      width 0
      transition all 250ms ease-in-out
      opacity 0
      vertical-align top
      white-space nowrap
      text-align left

      +below(desktop)
        display none

    a
      padding-top ($nav_height/2.5)
      padding-bottom ($nav_height/2.5)
      +below(desktop)
        margin-left 0

       &:hover
        .expand
          opacity 1
          width 110px


body.fixed-nav
  padding-top $nav_height
  aside
    position fixed
    top 0
    z-index 100

nav
  text-align center
  +above(desktop)
    text-align left
  a.inline
    margin-left 8px
  .nav__item
    overflow hidden
    padding 0
    width 30%
    height 40px
    display inline-block
    +above(tablet)
      width auto
      padding-right 20px
    +above(desktop)
      float left
      display block
      width auto
      height 55px
      padding 0
      margin 0 20px
      text-align center
      &:first-child
        margin-left 0

    p
      color manatee
      font-size 14px
      letter-spacing .019em
      line-height 38px
      vertical-align middle
      padding 0
      +above(desktop)
        line-height 55px
        font-size 15px

    a
      text-decoration none
      color $text
    a.active,
    a:hover
      border-bottom 2px solid bayoux
      cursor pointer
      padding-bottom 1px
    a.active
      color bayoux
    &.bordered
      border-left 1px solid manatee
      padding-left 10px
      margin-left 10px

.course_navigation
  background #fff
  border-bottom 1px solid lighten($border_lt, 20%)
  > .container
    +above(desktop)
      display flex
    > a
      display block
      text-decoration none
      text-align center
      +above(desktop)
        max-width 370px
        margin-right 40px
        padding-right 40px
        text-align left
        border-right 1px solid lighten($border_lt, 20%)
      > h2
        font-size 18px
        font-weight 300
        margin-bottom 0
        white-space nowrap
        text-overflow ellipsis
        line-height 55px
        overflow hidden
        -webkit-font-smoothing auto

