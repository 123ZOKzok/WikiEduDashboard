nav
  .nav__item
    background-color lightgray
    border-bottom 1px solid dimgray
    cursor pointer
    padding 20px 0


.list
  list-style none
  list-style-type none
.row
  border-bottom 1px solid dimgray
  margin-left 0
  overflow hidden
  padding 10px 0
  text-align center
  div:first-child
    text-align left
.course-list__row
  .course-list__row__title
    col(2/6)
  .course-list__row__characters
    col(1/6)
  .course-list__row__views
    col(1/6)
  .course-list__row__students
    col(1/6)
  .course-list__row__link
    col(1/6)
.user-list__row
  .user-list__row__name
    col(2/5)
  .user-list__row__training
    col(1/5)
  .user-list__row__revisions
    col(1/5)
  .user-list__row__link
    col(1/5)


.stat-display
  overflow hidden
  padding 20px 0
  .stat-display__stat
    text-align center
    span(1/9, offset=1/9)