.sort
  cursor pointer
  &.asc > p:before, &.desc > p:before
    display inline-block
    content '\f107'
    font-family "FontAwesome"
    font-size 13px
    margin-right 5px
    transition transform .2s

  &.asc p:before
    transform rotate(180deg)
  &.desc p:before
    transform rotate(0deg)
.list__header
  background-color transparent !important
  border 0 !important
  font-family "Roboto"
  .row__wrapper
    border 0 !important
    padding-top 0 !important
    padding-bottom 0 !important
    p
      color manatee
      // letter-spacing 0.5px
  &:hover
    background initial !important
.list
  list-style none
  list-style-type none
.row
  align-items center
  background-color white
  border 1px solid mischka
  border-width 0 1px 1px
  justify-content flex-start
  margin 0
  padding 0
  transition background .15s
  &:first-child
    border-width 1px
  p, small
    color dove
    &.red
      color burnt
  div:not(.drawer):last-child
    justify-content flex-start
    +above(desktop)
      justify-content center
  div:not(.drawer)
    align-items center
    display flex
    min-height 40px
    p
      flex 1
  h4
    color dove
  .row__wrapper
    cf()
    flex-wrap wrap
    padding 15px
    position relative
    width 100%
    +above(desktop)
      flex-wrap nowrap
  .fake-link
    font-size 14px
    font-family "Roboto"
    text-align right
  &:last-child .row__wrapper
    border-bottom none
  &:hover
    background athens
    .fake-link:after
      display inline-block
      content '\f107'
      font-family "FontAwesome"
      font-size 13px
      font-weight bold
      margin-left 8px
      transform rotate(270deg)
  &.view-all
    background none
    border 0
    justify-content center !important
    margin-top 20px
    padding-left 20px
    padding-right 20px
    +above(desktop)
      padding-left 0
      padding-right 0
    a
      font-family "Roboto"
    div
      align-items center
      justify-content center
      min-height 48px
    &:hover
      background none !important
  &.open
    &:hover
      background none
    > .row__wrapper
      background-color manatee
      &:hover
        background manatee !important
      p
        color white
      small
        color white

.table__header
  border-bottom 0
  padding 0
  width 100%
  div
    align-items flex-end
    p
      color white
      text-align left

.course-list__row
  .course-list__row__title
    col(1)
    +above(desktop)
      col(2/6)
  .course-list__row__characters, .course-list__row__views,
  .course-list__row__students
    float left
    +above(desktop)
      col(1/6)
    span
      display inline
  .course-list__row__students
    p
      border-right none
      padding-right 0
  .course-list__row__link
    +above(desktop)
      col(1/6)
      position static
  div:not(.drawer)
    min-height 40px

.user-list__row
  .user-list__row__name
    col(1)
    +above(desktop)
      col(5/20)
    p.name
      line-height 1
      margin-top 13px
    small
      display none
      font-size 8px
      +above(desktop)
        display inline-block
  .user-list__row__training
    +above(desktop)
      display none !important
  .user-list__row__characters__mobile
    +above(desktop)
      display none !important
  .user-list__row__characters-ms
    col(5/40)
    display none !important
    +above(desktop)
      display flex !important
  .user-list__row__characters-us
    col(5/40)
    display none !important
    +above(desktop)
      display flex !important
  .user-list__row__assignee,
  .user-list__row__reviewer
    display none !important
    +above(desktop)
      col(5/20)
      display flex !important
    span.article_rating
      font-size 11px
      vertical-align super
  .user-list__row__link
    margin-top -20px
    position absolute
    right 30px
    top 50%
    .icon:before
      content '\f078'
      font-family 'FontAwesome'
      font-size 16px
      font-weight 100
    +above(desktop)
      col(2/20)
      position static
      margin-top 0
      .icon:before
        font-weight normal
  .user-list__row__spacer
    col(0/20)

.article-list__row
  .article-list__row__rating
    col(1/10)
  .article-list__row__title
    col(1)
    +above(desktop)
      col(6/20)
  .article-list__row__characters, .article-list__row__views
    font-size 14px
    +above(desktop)
      col(6/40)
    span
      display inline
  .article-list__row__link
    col(6/40)

.revision-list__row
  &.list__header
    p, h6
      font-size 14px
    max-height 40px
  .revision-list__row__title
    col(1)
    +above(desktop)
      col(9/40)
  .revision-list__row__date
    col(9/40)
  .revision-list__row__characters
    +above(desktop)
      col(9/40)
  .revision-list__row__views
    +above(desktop)
      col(5/40)
  .revision-list__row__link
    col(8/40)


.avatar, .rating
  margin-right 15px
  +above(desktop)
    display inline-block

.avatar
  display none
  round-placeholder(20)
  img
    width 40px

.rating
  round-placeholder(24)
  background-color transparent
  border 2px solid manatee
  text-align center
  p
    color bayoux
    font-size 14px
  &.fa, &.fl
    border 2px solid #6699FF
  &.a
    border 2px solid #66FFFF
  &.ga
    border 2px solid #66FF66
  &.b
    border 2px solid #B2FF66
  &.c
    border 2px solid #FFFF66
  &.start
    border 2px solid #FFAA66
  &.stub
    border 2px solid #FF6666
  &.list
    border 2px solid #AA88FF


.row:not(.list__header)
  .course-list__row__characters, .course-list__row__views,
  .course-list__row__students, .user-list__row__characters__mobile,
  .user-list__row__training, .article-list__row__characters,
  .article-list__row__views, .revision-list__row__characters,
  .revision-list__row__views
    p
      font-size 14px
      +above(desktop)
        border 0
        font-size 16px
        padding 0

  .course-list__row__characters, .course-list__row__views,
  .article-list__row__characters, .user-list__row__training,
  .revision-list__row__characters
    +below(desktop)
      margin-right 8px
    p
      padding-right 8px
      border-right 1px solid manatee
      +above(desktop)
        border-right none

  p.title
    font-size 20px
    +above(desktop)
      font-size 16px

  .row__fake__link
    margin-top -20px
    position absolute
    right 15px
    top 50%
    transform rotate(270deg)
    +above(desktop)
      span(0)
      right 0
    .icon:before
      content '\f078'
      font-family "FontAwesome"
      font-size 16px
      font-weight 100

  &.course-list__row, &.revision-list__row,
  &.article-list__row
    .row__wrapper > div:nth-last-child(2)
      margin-right 0