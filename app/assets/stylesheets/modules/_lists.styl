.sort
  cursor pointer
  &.asc p:before
    content '\25B4'
    margin-right 5px
  &.desc p:before
    content '\25BE'
    margin-right 5px
.list__header
  border-bottom 1px solid manatee !important
  font-family "Roboto"
  .row__wrapper
    padding-top 0 !important
    padding-bottom 0 !important
    p
      color manatee
      letter-spacing 0.5px
  &:hover
    background initial !important
.list
  list-style none
  list-style-type none
.row
  align-items center
  border-bottom 1px solid mercury
  justify-content flex-start
  margin-left 0
  transition background 0.15s
  div:not(.drawer):last-child
    justify-content center
  div:not(.drawer)
    align-items center
    display flex
    min-height 60px
    p
      flex 1
  h4
    color dove
  .row__wrapper
    padding 15px
    width 100%
  .fake-link
    font-size 14px
    font-family "Roboto"
    text-align right
  &:hover
    background athens
    .fake-link:after
      content '\003e'
      margin-left 5px
  &.view-all
    border-bottom none
    div
      align-items center
      justify-content center
      min-height 80px
    &:hover
      background none !important
  &.open > .row__wrapper
    background-color manatee
    &:hover
      background manatee !important
    p
      color white

.table__header
  border-bottom 0
  padding 0
  width 100%
  div
    align-items flex-end
    p
      color white
      text-align left

.course-list__row
  .course-list__row__title
    col(2/6)
  .course-list__row__characters
    col(1/6)
  .course-list__row__views
    col(1/6)
  .course-list__row__students
    col(1/6)
  .course-list__row__link
    col(1/6)

.user-list__row
  .user-list__row__name
    col(6/20)
    p.name
      line-height 1
      margin-top 13px
    .avatar
      round-placeholder(30)
      display inline-block
      margin-right 15px
    small
      font-size 8px
  .user-list__row__characters-ms
    col(3/20)
  .user-list__row__characters-us
    col(3/20)
  .user-list__row__edits
    col(6/20)
  .user-list__row__link
    col(2/20)
  .user-list__row__spacer
    col(0/20)

.article-list__row
  .article-list__row__title
    col(2/5)
  .article-list__row__characters
    col(1/5)
  .article-list__row__views
    col(1/5)
  .article-list__row__link
    col(1/5)

.revision-list__row
  .revision-list__row__title
    col(6/20)
  .revision-list__row__date
    col(5/20)
  .revision-list__row__namespace
    col(3/20)
  .revision-list__row__characters
    col(4/20)
  .revision-list__row__views
    col(2/20)
  .revision-list__row__link
    col(3/20)