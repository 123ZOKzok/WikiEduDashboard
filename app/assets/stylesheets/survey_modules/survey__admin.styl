body.survey-page
  .survey__edit,
  .survey__admin
    // max-width 800px
    .block
      max-width 100%
    
    & > h2
      color white
  
  .form-inputs.survey__title-input
    margin-bottom $spacer * 4

.survey__admin__nav
  overflow hidden
  background darken(manatee, 10%)
  
  ul
    list-style none

  li
    float left
    margin 0
    border-right darken(manatee, 25%) 1px solid
    
  a
    color white
    padding $spacer
    display block
    text-decoration none
    &.active
      background darken(manatee, 25%)
    

.survey__admin
  trix-editor
    background-color athens
    margin-bottom $spacer * 2


  
.survey__title-input input[type=text]
  width 100%
  max-width 500px