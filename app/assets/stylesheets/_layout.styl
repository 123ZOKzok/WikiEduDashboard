body > .container
  +above(desktop)
    padding-bottom 80px

.container
  center(1100px)
  padding 0 10px
  position relative
  .container
    padding 0
  cf()
  +above(1140px)
    padding 0
    

main
  background-color transparent
  border-width 0 1px
  font-size 0
  padding-bottom 80px
  header
    background-color bayoux
    color white
    font-weight 300
    padding 120px 0 40px
    &.course-page
      padding 80px 0 20px
      +above(desktop)
        padding 80px 0 0

header
  border-bottom 1px solid zircon
  display inline-block
  padding 20px
  text-align center
  width 100%
  .title
    padding 0 20px

.section-header
  overflow hidden
  padding 20px 0
  position relative
  h3
    color dove
    font-size 21px
    margin-bottom 5px

section
  position relative

.details
  padding-top 20px
  overflow hidden
  text-align left
  span(1)
  .details__detail
    span(1/2)
    padding 20px 0
    text-align left
    +above(desktop)
      span(1/5)
      text-align left
    &:last-child
      span(2/5)
      text-align left
    h6
      font-family "Roboto"
      font-size 15px
    p
      color white
      font-size 15px
      font-weight
      a:hover
        color white

.hidden
  display none

.course-page
  .title
    span(1/2)
    padding-right 20px
    text-align left
    h2
      display inline-block
      &:hover
        color white

.course_main
  background-color smoke

hr
  border 1px solid dove
  border-width 1px 0 0
  height 1px

.text-center
  text-align center