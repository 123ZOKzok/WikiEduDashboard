body > .container
  +above(desktop)
    padding-bottom 80px

.container
  center(1100px)
  position relative
  cf()

main
  background-color white
  border-width 0 1px
  font-size 0
  header
    background-color bayoux
    color white
    font-weight 300
    padding 80px 0 0

header
  border-bottom 1px solid zircon
  display inline-block
  padding 20px
  text-align center
  width 100%
  .title
    padding 0 20px

section
  position relative

.details
  padding-top 20px
  overflow hidden
  text-align left
  span(1)
  .details__detail
    span(1/2)
    padding 20px 0
    text-align left
    +above(desktop)
      span(1/5)
      text-align left
    &:last-child
      span(2/5)
      text-align left
    h6
      font-family "Roboto"
      font-size 15px
    p
      color white
      font-size 15px
      font-weight
      a:hover
        color white

.hidden
  display none

.course-page
  .title
    span(1/2)
    padding-right 20px
    text-align left
    h6
      color bayoux

.alert
  padding 20px
  text-align center
  p
    color burnt

.course_main
  background-color smoke