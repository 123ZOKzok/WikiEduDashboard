.container
  background athens
  border 1px solid zircon
  border-width 0 1px
  center(1100px)
  position relative
  cf()

aside
  height 100%
  span(1/5)

main
  background white
  border-left 1px solid zircon
  span(4/5)
  header
    background-color manatee
    color white
    padding 40px 20px

header.subpage
  padding 40px 20px 10px

header
  border-bottom 1px solid zircon
  padding 20px
  text-align center
  overflow hidden

section
  padding 0 20px

.leader
  span(1/2)
  padding 20px 0
  p
    color white

.hidden
  display none

.subpage
  .title
    span(1/2)
    text-align left
  .stat-display
    span(1/2)
    padding 0
    equal-height(true)
    .stat-display__stat
      background bayoux
      border 1px solid manatee
      border-width 0 1px
      padding 5px 5px 10px
      span(1/4)
      &:first-child
        border-top-left-radius 5px
        border-bottom-left-radius 5px
        border-left 0
      &:last-child
        border-top-right-radius 5px
        border-bottom-right-radius 5px
        border-right 0
    &.half
      span(1/4)
      float right
      .stat-display__stat
        span(1/2)